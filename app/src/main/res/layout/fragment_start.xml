<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.start.StartFragment">

        <ImageView
            android:id="@+id/movieCollage"
            android:layout_width="421dp"
            android:layout_height="224dp"
            android:scaleType="centerCrop"
            android:src="@drawable/collage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/movieText"
            android:layout_width="349dp"
            android:layout_height="204dp"
            android:fontFamily="@font/moviefont"
            android:letterSpacing="0.1"
            android:text="@string/m_vie"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/movieCollage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/movieCollage">
        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieCollage">

            <ImageView
                android:id="@+id/animeCollage"
                android:layout_width="421dp"
                android:layout_height="243dp"
                android:scaleType="fitXY"
                android:src="@drawable/animecollage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/animeText"
                android:layout_width="340dp"
                android:layout_height="214dp"
                android:fontFamily="@font/manga"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="@string/anime"
                android:textColor="@color/white"
                android:textSize="70sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/animeCollage"
                app:layout_constraintStart_toStartOf="@+id/animeCollage"
                app:layout_constraintTop_toTopOf="@+id/animeCollage">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/serialCollage"
                android:layout_width="418dp"
                android:layout_height="272dp"
                android:scaleType="centerCrop"
                android:src="@drawable/serialcollage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <TextView
                android:id="@+id/serialText"
                android:layout_width="355dp"
                android:layout_height="217dp"
                android:fontFamily="@font/serial"
                android:gravity="center"
                android:text="@string/serial"
                android:textColor="@color/white"
                android:textSize="70sp"
                app:layout_constraintBottom_toBottomOf="@+id/serialCollage"
                app:layout_constraintEnd_toEndOf="@+id/serialCollage"
                app:layout_constraintStart_toStartOf="@+id/serialCollage"
                app:layout_constraintTop_toTopOf="@+id/serialCollage">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <!--        <com.google.android.material.button.MaterialButton-->
